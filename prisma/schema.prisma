generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Stock {
  id         Int      @id @default(autoincrement())
  userId     String
  symbol     String
  name       String
  quantity   Float
  avgPrice   Float
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@unique([userId, symbol])
}